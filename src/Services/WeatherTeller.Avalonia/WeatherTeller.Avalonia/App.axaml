<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:WeatherTeller.Avalonia"
             xmlns:infrastructure="clr-namespace:WeatherTeller.Infrastructure;assembly=WeatherTeller.Infrastructure"
             x:Class="WeatherTeller.Avalonia.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <infrastructure:AppViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>