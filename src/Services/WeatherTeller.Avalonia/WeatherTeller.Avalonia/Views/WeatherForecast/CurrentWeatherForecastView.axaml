<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:currentWeather="clr-namespace:WeatherTeller.ViewModels.WeatherForecast.CurrentWeather;assembly=WeatherTeller.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WeatherTeller.Avalonia.Views.WeatherForecast.CurrentWeatherForecastView"
             x:DataType="currentWeather:CurrentWeatherForecastViewModel">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto">
        <TextBlock IsEnabled="False" Text="{Binding WeatherState.Location, FallbackValue=''}" />
        <TextBlock Grid.Row="1" IsEnabled="False" Text="{Binding WeatherState.TemperatureC, FallbackValue='',StringFormat='Temperature: {0}°C'}" />
        <TextBlock Grid.Row="2" IsEnabled="False" Text="{Binding WeatherState.Condition, FallbackValue=''}" />
        <TextBlock Grid.Row="3" IsEnabled="False" Text="{Binding WeatherState.Precipitation, FallbackValue='',StringFormat='Precipitation: {0}mm'}" />
    </Grid>
</UserControl>